# IMAP settings
IMAP_HOST=imap.web.de
IMAP_PORT=993
IMAP_USER=your.name@web.de
IMAP_PASSWORD=your_app_password
IMAP_SSL=true
IMAP_FOLDERS=INBOX,Sent,Junk

# Archive + DB
ARCHIVE_ROOT=/data
STATE_DB=/state/mail.db

# Optional
LOG_PATH=/data/logs/mail-archiver.log

# Metrics (optional)
# Pushgateway URL (e.g., http://nas.local:9091)
METRICS_PUSHGATEWAY_URL=
METRICS_JOB=mail_archiver
METRICS_INSTANCE=
# Textfile export (e.g., /state/metrics.prom) for node_exporter textfile
METRICS_TEXTFILE=
# Top senders to publish (0 disables)
METRICS_TOP_SENDERS=10
# Top domains to publish (0 disables)
METRICS_TOP_DOMAINS=10

# Web UI
WEB_HOST=0.0.0.0
WEB_PORT=8080
